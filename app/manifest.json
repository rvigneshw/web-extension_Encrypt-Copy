{
  "name": "__MSG_appName__",
  "short_name": "__MSG_appShortName__",
  "description": "__MSG_appDescription__",
  "version": "0.0.1",
  "manifest_version": 2,
  "default_locale": "en",
  "icons": {
    "16": "images/icon.svg",
    "128": "images/icon.svg"
  },
  "background": {
    "scripts": [
      "scripts/aes.js",
      "scripts/background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "19": "images/icon.svg",
      "38": "images/icon.svg"
    },
    "default_title": "__MSG_browserActionTitle__",
    "default_popup": "pages/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "css": [
        "styles/contentscript.css"
      ],
      "js": [
        "scripts/contentscript.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "commands": {
    "enc-copy": {
      "suggested_key": {
        "default": "Alt+C",
        "linux": "Alt+C"
      },
      "description": "Send a 'enc-copy' event"
    },
    "dec-paste": {
      "suggested_key": {
        "default": "Alt+V",
        "linux": "Alt+V"
      },
      "description": "Send a 'enc-copy' event"
    }
  },
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "tabs",
    "clipboardRead",
    "clipboardWrite",
    "<all_urls>"
  ]
}